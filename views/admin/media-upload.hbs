<div class="container">
    <div class="page-header">
        <h1 class="page-title">Upload Media</h1>
        <p class="page-subtitle">Add new files to your media library</p>
    </div>
    
    <div class="upload-container">
        <form id="mediaUploadForm" class="upload-form" enctype="multipart/form-data">
            <!-- File Upload Area -->
            <div class="file-upload-section">
                <div class="file-upload-area" id="fileUploadArea">
                    <div class="upload-icon">
                        <i class="fas fa-cloud-upload-alt"></i>
                    </div>
                    <h3>Drag & Drop Your Files Here</h3>
                    <p>or <span class="upload-link">click to browse</span></p>
                    <input type="file" id="mediaFile" name="file" accept="image/*,audio/*,video/*" hidden required>
                    
                    <div class="upload-limits">
                        <div class="limit-item">
                            <i class="fas fa-info-circle"></i>
                            <span>Max file size: 100MB</span>
                        </div>
                        <div class="limit-item">
                            <i class="fas fa-file-alt"></i>
                            <span>Supported: Images, Audio, Video</span>
                        </div>
                    </div>
                </div>
                
                <!-- Upload Progress -->
                <div class="upload-progress" id="uploadProgress" style="display: none;">
                    <div class="progress-bar">
                        <div class="progress-fill" id="progressFill"></div>
                    </div>
                    <div class="progress-text" id="progressText">0%</div>
                </div>
                
                <!-- File Preview -->
                <div class="upload-preview" id="uploadPreview" style="display: none;"></div>
            </div>
            
            <!-- Upload Details -->
            <div class="upload-details" id="uploadDetails" style="display: none;">
                <div class="form-section">
                    <h3 class="section-title">Media Information</h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="title" class="form-label">Title *</label>
                            <input type="text" id="title" name="title" class="form-input" placeholder="Enter media title" required>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="description" class="form-label">Description</label>
                            <textarea id="description" name="description" class="form-textarea" rows="4" placeholder="Describe your media content"></textarea>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="category_id" class="form-label">Category *</label>
                            <select id="category_id" name="category_id" class="form-select" required>
                                <option value="">Select Category</option>
                                {{#each categories}}
                                    <option value="{{id}}">{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label for="tags" class="form-label">Tags</label>
                            <input type="text" id="tags" name="tags" class="form-input" placeholder="Enter tags separated by commas">
                            <small class="form-hint">Use commas to separate multiple tags</small>
                        </div>
                    </div>
                </div>
                
                <div class="form-section">
                    <h3 class="section-title">External Links <span class="optional">(Optional)</span></h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="shopee_link" class="form-label">
                                <i class="fas fa-shopping-bag"></i>
                                Shopee Product Link
                            </label>
                            <input type="url" id="shopee_link" name="shopee_link" class="form-input" placeholder="https://shopee.co.id/...">
                        </div>
                        
                        <div class="form-group">
                            <label for="tiktok_link" class="form-label">
                                <i class="fab fa-tiktok"></i>
                                TikTok Link
                            </label>
                            <input type="url" id="tiktok_link" name="tiktok_link" class="form-input" placeholder="https://tiktok.com/...">
                        </div>
                    </div>
                </div>
                
                <div class="form-section">
                    <h3 class="section-title">Settings</h3>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="checkbox-label">
                                <input type="checkbox" name="is_featured" value="1">
                                <span class="checkmark"></span>
                                Featured Content
                                <small class="form-hint">Mark as featured to highlight this content</small>
                            </label>
                        </div>
                        
                        <div class="form-group">
                            <label class="checkbox-label">
                                <input type="checkbox" name="is_active" value="1" checked>
                                <span class="checkmark"></span>
                                Active
                                <small class="form-hint">Make this content immediately available</small>
                            </label>
                        </div>
                    </div>
                </div>
                
                <!-- Form Actions -->
                <div class="form-actions">
                    <button type="button" class="btn btn-secondary" onclick="resetForm()">
                        <i class="fas fa-undo"></i>
                        Reset
                    </button>
                    <button type="submit" class="btn btn-primary submit-btn" disabled>
                        <i class="fas fa-upload"></i>
                        Upload Media
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

